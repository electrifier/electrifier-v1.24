<?xml version="1.0" encoding="utf-8" ?>
<UserControl x:Class="electrifier.Controls.Vanara.Shell32TreeView"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="using:electrifier.Controls.Vanara"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             d:DataContext="{d:DesignInstance Type=local:ExplorerBrowser}"
             mc:Ignorable="d">
    <Grid>
        <Grid.Resources>
            <DataTemplate x:Name="Shell32TreeViewItemTemplate"
                          x:DataType="local:ExplorerBrowserItem">
                <TreeViewItem HasUnrealizedChildren="{x:Bind HasUnrealizedChildren}"
                              IsExpanded="{x:Bind IsExpanded}"
                              IsSelected="{x:Bind IsSelected}"
                              ItemsSource="{x:Bind Children}">
                    <Grid>
                        <StackPanel HorizontalAlignment="Stretch"
                                    MaxHeight="23"
                                    Orientation="Horizontal">
                            <!-- todo: add overlay for shared, links etc. -->
                            <Image Name="Image"
                                   Opacity="{x:Bind Opacity}"
                                   Source="{x:Bind BitmapSource}"
                                   Visibility="Visible" />
                            <TextBlock x:Name="TextBlock"
                                       Margin="5,0,5,0"
                                       Opacity="{x:Bind Opacity}"
                                       Text="{x:Bind DisplayName}" />
                        </StackPanel>
                    </Grid>
                </TreeViewItem>
            </DataTemplate>
        </Grid.Resources>
        <TreeView x:Name="TreeView"
                  ItemTemplate="{StaticResource Shell32TreeViewItemTemplate}"
                  SelectionMode="Single">
        </TreeView>
    </Grid>
</UserControl>
