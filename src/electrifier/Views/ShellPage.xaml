<Page 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:viewmodels="using:electrifier.ViewModels"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:i="using:Microsoft.Xaml.Interactivity"
      xmlns:helpers="using:electrifier.Helpers"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:behaviors="using:electrifier.Behaviors"
      x:Class="electrifier.Views.ShellPage"
      Loaded="OnLoaded"
      d:DataContext="{d:DesignInstance Type=viewmodels:ShellViewModel}"
      
      >
    <Grid>
        <!-- #region MainWindow -> AppTitleBar -->
        <Grid x:Name="AppTitleBar"
              Height="{Binding ElementName=NavigationViewControl, Path=CompactPaneLength}"
              HorizontalAlignment="Stretch"
              IsHitTestVisible="True"
              VerticalAlignment="Top">
            <StackPanel x:Name="AppTitleBar_LeftStackPanel"
                        HorizontalAlignment="Left"
                        Margin="0,5,0,0"
                        Orientation="Horizontal"
                        VerticalAlignment="Top"
                        Width="Auto">
                <Image x:Name="AppTitleBar_WindowIcon"
                       Height="32"
                       MaxHeight="32"
                       Source="ms-appx:///Assets/app.ico" />
                <!-- TODO: Create style in static resources: Style="{StaticResource AppTitleBarTitleStyle}" -->
                <StackPanel x:Name="AppTitleBar_TitleStackPanel"
                            Orientation="Vertical"
                            VerticalAlignment="Top"
                            Margin="5,0,0,0">
                    <TextBlock x:Name="AppTitleBar_TitleTextBlock"
                               FontSize="16"
                               Text="{x:Bind ((ContentControl)ViewModel.Selected).Content, Mode=OneWay}" />
                    <TextBlock x:Name="AppTitleBar_SubTitleTextBlock"
                               FontSize="12"
                               HorizontalAlignment="Right"
                               Text="electrifier" />
                </StackPanel>
            </StackPanel>
        </Grid>
        <!-- #endregion MainWindow -> AppTitleBar -->
        <!-- TODO: Insert MenuItemsSource -->
        <!-- TODO: IsPaneToggleButtonVisible = True -> PaneToggle-Style and overlap -->
        <NavigationView x:Name="NavigationViewControl"
                        AlwaysShowHeader="True"
                        CompactPaneLength="72"
                        IsBackButtonVisible="Visible"
                        IsBackEnabled="True"
                        IsPaneOpen="True"
                        IsPaneToggleButtonVisible="True"
                        IsSettingsVisible="True"
                        DisplayModeChanged="NavigationViewControl_DisplayModeChanged">
            <!--<NavigationView.IsTitleBarAutoPaddingEnabled />-->
            <!--
                TODO: Update item titles by updating <x:Uid>.Content entries in Strings/en-us/Resources.resw.
                https://docs.microsoft.com/windows/uwp/app-resources/localize-strings-ui-manifest#refer-to-a-string-resource-identifier-from-xaml
            
                TODO: Update item icons by updating FontIcon.Glyph properties.
                https://docs.microsoft.com/windows/apps/design/style/segoe-fluent-icons-font#icon-list
                -->
            <NavigationView.PaneHeader>
                <ImageIcon MaxHeight="32"
                           Visibility="Collapsed"
                           HorizontalAlignment="Right"
                           Source="ms-appx:///Assets/WindowIcon.ico" />
            </NavigationView.PaneHeader>
            <!--<NavigationView.PaneTitle> electrifier </NavigationView.PaneTitle>-->
            <NavigationView.MenuItems>
                <NavigationViewItem x:Uid="NavigationView_Workbench"
                                    IsSelected="True"
                                    helpers:NavigationHelper.NavigateTo="electrifier.ViewModels.WorkbenchViewModel">
                    Workbench
                    <NavigationViewItem.Icon>
                        <!-- Glyph "&#xe8d1;" => GotoToday -->
                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}"
                                  Glyph="&#xe8d1;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <NavigationViewItemSeparator />

                <NavigationViewItem x:Uid="NavigationView_FileManager"
                                    Visibility="Collapsed"
                                    helpers:NavigationHelper.NavigateTo="electrifier.ViewModels.FileManagerViewModel">
                    File Manager
                    <NavigationViewItem.Icon>
                        <!-- Glyph "&#xec50" => "FileExplorer" -->
                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}"
                                  Glyph="&#xec50;" />
                    </NavigationViewItem.Icon>
                    <!-- TODO: Create SubItems -->
                    <!--<NavigationViewItem.MenuItems>
                        <NavigationViewItem Content="Create new"
                                            Icon="NewFolder"
                                            ToolTipService.ToolTip="Create new"
                                            Tag="SamplePage5" />
                        <NavigationViewItem Content="Upload file"
                                            Icon="OpenLocal"
                                            ToolTipService.ToolTip="Upload file"
                                            Tag="SamplePage6" />
                    </NavigationViewItem.MenuItems>-->
                </NavigationViewItem>
                <NavigationViewItem x:Uid="NavigationView_WebView"
                                    Visibility="Collapsed"
                                    helpers:NavigationHelper.NavigateTo="electrifier.ViewModels.WebViewViewModel">
                    Web Browser
                    <NavigationViewItem.Icon>
                        <!-- Glyph "&#xeb41" => Website -->
                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}"
                                  Glyph="&#xeb41;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
            </NavigationView.MenuItems>
            <!-- #region FooterMenuItems -->
            <NavigationView.FooterMenuItems>
                <NavigationViewItem x:Uid="NavigationView_Footer_WebView"
                                    helpers:NavigationHelper.NavigateTo="electrifier.ViewModels.WebViewViewModel">
                    Web Browser
                    <NavigationViewItem.Icon>
                        <!-- Glyph="&#xeb41" => "Website" is the icon for the Web Browser -->
                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}"
                                  Glyph="&#xeb41;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem x:Uid="NavigationView_Footer_FileManager"
                                    helpers:NavigationHelper.NavigateTo="electrifier.ViewModels.FileManagerViewModel">
                    File Manager
                    <NavigationViewItem.Icon>
                        <!-- Glyph "&#xec50" => "FileExplorer" -->
                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}"
                                  Glyph="&#xec50;" />
                    </NavigationViewItem.Icon>
                    <!--<NavigationViewItem.MenuItems>
                        <NavigationViewItem Content="Create new"
                                            Icon="NewFolder"
                                            ToolTipService.ToolTip="Create new"
                                            Tag="SamplePage5" />
                        <NavigationViewItem Content="Upload file"
                                            Icon="OpenLocal"
                                            ToolTipService.ToolTip="Upload file"
                                            Tag="SamplePage6" />
                    </NavigationViewItem.MenuItems>-->
                </NavigationViewItem>
                <NavigationViewItemSeparator />
                <NavigationViewItem x:Uid="NavigationView_Footer_Workbench"
                                    helpers:NavigationHelper.NavigateTo="electrifier.ViewModels.WorkbenchViewModel">
                    Workbench
                    <NavigationViewItem.Icon>
                        <!-- Glyph="&#xe8d1;" => "GotoToday" is the icon for the Workbench -->
                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}"
                                  Glyph="&#xe8d1;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
            </NavigationView.FooterMenuItems>
            <!-- #endregion FooterMenuItems -->
            <NavigationView.HeaderTemplate>
                <DataTemplate>
                    <Grid>
                        <TextBlock Text="{Binding}"
                                   Style="{ThemeResource TitleTextBlockStyle}" />
                    </Grid>
                </DataTemplate>
            </NavigationView.HeaderTemplate>
            <i:Interaction.Behaviors>
                <behaviors:NavigationViewHeaderBehavior DefaultHeader="{x:Bind ((ContentControl)ViewModel.Selected).Content, Mode=OneWay}">
                    <behaviors:NavigationViewHeaderBehavior.DefaultHeaderTemplate>
                        <DataTemplate>
                            <Grid>
                                <TextBlock Text="{Binding}"
                                           Style="{ThemeResource TitleTextBlockStyle}" />
                            </Grid>
                        </DataTemplate>
                    </behaviors:NavigationViewHeaderBehavior.DefaultHeaderTemplate>
                </behaviors:NavigationViewHeaderBehavior>
            </i:Interaction.Behaviors>
            <Grid Margin="{StaticResource NavigationViewPageContentMargin}">
                <!-- TODO: set e.g. Background="Transparent" -->
                <Frame x:Name="NavigationFrame" />
            </Grid>
        </NavigationView>
    </Grid>
</Page>
