<Page x:Class="electrifier.Views.ShellPage"
      xmlns:behaviors="using:electrifier.Behaviors"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:helpers="using:electrifier.Helpers"
      xmlns:i="using:Microsoft.Xaml.Interactivity"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:viewmodels="using:electrifier.ViewModels"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      Loaded="OnLoaded">
    <Grid>
        <Grid x:Name="AppTitleBar"
              Height="{Binding ElementName=NavigationViewControl, Path=CompactPaneLength}"
              HorizontalAlignment="Stretch"
              IsHitTestVisible="True"
              VerticalAlignment="Top">
            <StackPanel x:Name="AppTitleBar_LeftStackPanel"
                        HorizontalAlignment="Left"
                        Margin="0,5,0,0"
                        Orientation="Horizontal"
                        VerticalAlignment="Top"
                        Width="Auto">
                <Image x:Name="AppTitleBar_WindowIcon"
                       Height="32"
                       MaxHeight="32"
                       Source="ms-appx:///Assets/app.ico" />
                <!-- TODO: Create style in static resources: Style="{StaticResource AppTitleBarTitleStyle}" -->
                <StackPanel x:Name="AppTitleBar_TitleStackPanel"
                            Orientation="Vertical"
                            VerticalAlignment="Top"
                            Margin="5,0,0,0">
                    <TextBlock x:Name="AppTitleBar_TitleTextBlock"
                               FontSize="16"
                               Text="{x:Bind ((ContentControl)ViewModel.Selected).Content, Mode=OneWay}" />
                    <TextBlock x:Name="AppTitleBar_SubTitleTextBlock"
                               FontSize="12"
                               HorizontalAlignment="Right"
                               Text="electrifier" />
                </StackPanel>
            </StackPanel>
        </Grid>
        <NavigationView x:Name="NavigationViewControl"
                        AlwaysShowHeader="True"
                        CompactPaneLength="72"
                        DisplayModeChanged="NavigationViewControl_DisplayModeChanged"
                        IsBackButtonVisible="Visible"
                        IsBackEnabled="False"
                        IsPaneOpen="True"
                        IsPaneToggleButtonVisible="True"
                        IsSettingsVisible="True"
                        IsTitleBarAutoPaddingEnabled="True">
            <!--<NavigationView.IsTitleBarAutoPaddingEnabled />-->
            <!--
                TODO: Update item titles by updating <x:Uid>.Content entries in Strings/en-us/Resources.resw.
                https://docs.microsoft.com/windows/uwp/app-resources/localize-strings-ui-manifest#refer-to-a-string-resource-identifier-from-xaml
            
                TODO: Update item icons by updating FontIcon.Glyph properties.
                https://docs.microsoft.com/windows/apps/design/style/segoe-fluent-icons-font#icon-list
                -->
            <NavigationView.PaneHeader>
                <ImageIcon MaxHeight="32"
                           Visibility="Visible"
                           HorizontalAlignment="Right"
                           Source="ms-appx:///Assets/WindowIcon.ico" />
            </NavigationView.PaneHeader>
            <!--<NavigationView.PaneTitle> electrifier </NavigationView.PaneTitle>-->
            <NavigationView.MenuItems>
                <NavigationViewItem x:Uid="NavigationView_Workbench"
                                    IsSelected="True"
                                    helpers:NavigationHelper.NavigateTo="electrifier.ViewModels.WorkbenchViewModel">
                    Workbench
                    <NavigationViewItem.Icon>
                        <!-- Glyph "&#xe8d1;" => GotoToday -->
                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}"
                                  Glyph="&#xe8d1;" />
                    </NavigationViewItem.Icon>
                    <NavigationViewItem.MenuItems>
                        <NavigationViewItem Content="Home"
                                            Icon="Home"
                                            ToolTipService.ToolTip="Go to Editor Home"
                                            Tag="Editor Home" />
                        <NavigationViewItemSeparator />
                        <NavigationViewItem x:Uid="NavigationView_Footer_BucketList"
                                            helpers:NavigationHelper.NavigateTo="electrifier.ViewModels.WebViewViewModel"
                                            IsEnabled="False">
                            Bucket List
                            <NavigationViewItem.Icon>
                                <!-- Glyph="&" -->
                                <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}"
                                          Glyph="&#xeb41;" />
                            </NavigationViewItem.Icon>
                        </NavigationViewItem>
                    </NavigationViewItem.MenuItems>
                </NavigationViewItem>
                <NavigationViewItemSeparator />
                <NavigationViewItem x:Uid="NavigationView_Editors">
                    Editors
                    <NavigationViewItem.Icon>
                        <!-- Glyph="&" -->
                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}"
                                  Glyph="&#xe713;" />
                    </NavigationViewItem.Icon>
                    <NavigationViewItem.MenuItems>
                        <NavigationViewItem Content="Home"
                                            Icon="Home"
                                            ToolTipService.ToolTip="Go to Editor Home"
                                            Tag="Editor Home" />
                        <NavigationViewItemSeparator />
                        <NavigationViewItem x:Uid="NavigationView_Footer_ClipboardEditor"
                                            helpers:NavigationHelper.NavigateTo="electrifier.ViewModels.WebViewViewModel"
                                            IsEnabled="False">
                            Clipboard History
                            <NavigationViewItem.Icon>
                                <!-- Glyph="&" -->
                                <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}"
                                          Glyph="&#xeb41;" />
                            </NavigationViewItem.Icon>
                        </NavigationViewItem>
                        <NavigationViewItem x:Uid="NavigationView_Footer_ResourcesEditor"
                                            helpers:NavigationHelper.NavigateTo="electrifier.ViewModels.WebViewViewModel"
                                            IsEnabled="False">
                            Resources
                            <NavigationViewItem.Icon>
                                <!-- Glyph="&" -->
                                <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}"
                                          Glyph="&#xeb41;" />
                            </NavigationViewItem.Icon>
                        </NavigationViewItem>
                        <NavigationViewItem x:Uid="NavigationView_Footer_TextEditor"
                                            helpers:NavigationHelper.NavigateTo="electrifier.ViewModels.WebViewViewModel"
                                            IsEnabled="False">
                            Text
                            <NavigationViewItem.Icon>
                                <!-- Glyph="&" -->
                                <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}"
                                          Glyph="&#xeb41;" />
                                
                            </NavigationViewItem.Icon>
                            <!--<MenuFlyout>

</MenuFlyout>
<MenuFlyoutSubItem>
    
</MenuFlyoutSubItem>-->

                        </NavigationViewItem>
                    </NavigationViewItem.MenuItems>
                </NavigationViewItem>
            </NavigationView.MenuItems>
            <NavigationView.FooterMenuItems>
                <NavigationViewItem x:Uid="NavigationView_Footer_ContactList"
                                    helpers:NavigationHelper.NavigateTo="electrifier.ViewModels.WebViewViewModel"
                                    IsEnabled="False">
                    Contacts
                    <NavigationViewItem.Icon>
                        <!-- Glyph="&" -->
                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}"
                                  Glyph="&#xeb41;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem x:Uid="NavigationView_Footer_Ancients"
                                    helpers:NavigationHelper.NavigateTo="electrifier.ViewModels.WebViewViewModel"
                                    IsEnabled="False">
                    Ancients
                    <NavigationViewItem.Icon>
                        <!-- Glyph="&" -->
                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}"
                                  Glyph="&#xeb41;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem x:Uid="NavigationView_Footer_Favorites"
                                    helpers:NavigationHelper.NavigateTo="electrifier.ViewModels.WebViewViewModel"
                                    IsEnabled="False">
                    Favorites
                    <NavigationViewItem.Icon>
                        <!-- Glyph="&" -->
                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}"
                                  Glyph="&#xeb41;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem x:Uid="NavigationView_Footer_WebView"
                                    helpers:NavigationHelper.NavigateTo="electrifier.ViewModels.WebViewViewModel">
                    Web Browser
                    <NavigationViewItem.Icon>
                        <!-- Glyph="&#xeb41" => "Website" is the icon for the Web Browser -->
                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}"
                                  Glyph="&#xeb41;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem x:Uid="NavigationView_Footer_FileManager"
                                    helpers:NavigationHelper.NavigateTo="electrifier.ViewModels.FileManagerViewModel">
                    File Manager
                    <NavigationViewItem.Icon>
                        <!-- Glyph "&#xec50" => "FileExplorer" -->
                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}"
                                  Glyph="&#xec50;" />
                    </NavigationViewItem.Icon>
                    <NavigationViewItem.MenuItems>
                        <NavigationViewItem Content="Home"
                                            Icon="Home"
                                            ToolTipService.ToolTip="Go to Desktop folder"
                                            Tag="FileExplorer Desktop Folder" />
                        <NavigationViewItem Content="Documents"
                                            Icon="Document"
                                            ToolTipService.ToolTip="Documents"
                                            Tag="FileExplorer Documents Folder" />
                        <NavigationViewItem Content="Downloads"
                                            Icon="Download"
                                            ToolTipService.ToolTip="Downloads"
                                            Tag="FileExplorer Downloads Folder" />
                        <NavigationViewItem Content="Music"
                                            Icon="MusicInfo"
                                            ToolTipService.ToolTip="Music"
                                            Tag="FileExplorer Music Folder" />
                        <NavigationViewItem Content="Pictures"
                                            Icon="Pictures"
                                            ToolTipService.ToolTip="Pictures"
                                            Tag="FileExplorer Pictures Folder" />
                        <NavigationViewItem Content="Videos"
                                            Icon="Video"
                                            ToolTipService.ToolTip="Videos"
                                            Tag="FileExplorer Videos Folder" />
                        <NavigationViewItemSeparator />
                        <NavigationViewItem Content="Settings"
                                            Icon="Setting"
                                            ToolTipService.ToolTip="Settings"
                                            Tag="FileExplorer Settings" />
                    </NavigationViewItem.MenuItems>
                </NavigationViewItem>
                <NavigationViewItem x:Uid="NavigationView_Footer_Workbench"
                                    helpers:NavigationHelper.NavigateTo="electrifier.ViewModels.WorkbenchViewModel">
                    Workbench
                    <NavigationViewItem.Icon>
                        <!-- Glyph="&#xe8d1;" => "GotoToday" is the icon for the Workbench -->
                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}"
                                  Glyph="&#xe8d1;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
            </NavigationView.FooterMenuItems>
            <NavigationView.HeaderTemplate>
                <DataTemplate>
                    <Grid>
                        <TextBlock Text="{Binding}"
                                   Style="{ThemeResource TitleTextBlockStyle}" />
                    </Grid>
                </DataTemplate>
            </NavigationView.HeaderTemplate>
            <i:Interaction.Behaviors>
                <behaviors:NavigationViewHeaderBehavior DefaultHeader="{x:Bind ((ContentControl)ViewModel.Selected).Content, Mode=OneWay}">
                    <behaviors:NavigationViewHeaderBehavior.DefaultHeaderTemplate>
                        <DataTemplate>
                            <Grid>
                                <TextBlock Text="{Binding}"
                                           Style="{ThemeResource TitleTextBlockStyle}" />
                            </Grid>
                        </DataTemplate>
                    </behaviors:NavigationViewHeaderBehavior.DefaultHeaderTemplate>
                </behaviors:NavigationViewHeaderBehavior>
            </i:Interaction.Behaviors>
            <Grid Margin="{StaticResource NavigationViewPageContentMargin}">
                <!-- TODO: set e.g. Background="Transparent" -->
                <Frame x:Name="NavigationFrame" />
            </Grid>
        </NavigationView>
    </Grid>
</Page>
