<Page x:Class="electrifier.Views.WorkbenchPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="using:CommunityToolkit.WinUI"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:controls="using:CommunityToolkit.WinUI.Controls"
      xmlns:behaviors="using:electrifier.Behaviors"
      xmlns:viewmodels="using:electrifier.ViewModels"
      d:DataContext="{d:DesignInstance Type=viewmodels:WorkbenchViewModel}"
      behaviors:NavigationViewHeaderBehavior.HeaderMode="Always"
      mc:Ignorable="d">
    <!--       bahaviors:NavigationViewHeaderBehavior.Header="{x:Bind Header}" -->
    <!-- TODO: ui:UIElementExtensions.ClipToBounds="{x:Bind IsClipped, Mode=OneWay}" -->
    <!-- TODO: removed Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" -->
    <Grid x:Name="ContentArea">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition MaxWidth="450"
                              MinWidth="300" />
        </Grid.ColumnDefinitions>
        <StackPanel x:Name="MainContentAreaStackPanel"
                    Grid.Column="0">
            <!-- TODO: Bind to App Notifications -->
            <InfoBar x:Name="SettingsBackupWorkbenchInfoBar"
                     BorderThickness="8"
                     BorderBrush="Transparent"
                     IsClosable="True"
                     IsOpen="True"
                     Message="Do you want to allow electrifier to make backups of your Workbench settings?"
                     Title="Backup your Personal User Settings">
                <InfoBar.Content>
                    <ItemsStackPanel Height="Auto"
                                     Orientation="Horizontal">
                        <CheckBox x:Name="SettingsBackupWorkbenchAllowed">
                            Enable automatic backups and don't show again
                        </CheckBox>
                    </ItemsStackPanel>
                </InfoBar.Content>
            </InfoBar>
        </StackPanel>

        <controls:GridSplitter Grid.Column="1"
                               Width="12"
                               HorizontalAlignment="Left"
                               ResizeBehavior="BasedOnAlignment"
                               ResizeDirection="Columns">
            <controls:GridSplitter.RenderTransform>
                <TranslateTransform X="-6" />
            </controls:GridSplitter.RenderTransform>
        </controls:GridSplitter>

        <StackPanel x:Name="SidebarStackPanel"
                    Grid.Column="2">
            <!-- TODO: BorderThickness => StaticRessource -->
            <InfoBar x:Name="LicenseAgreementInfoBar"
                     BorderThickness="8"
                     BorderBrush="Transparent"
                     IsClosable="True"
                     IsOpen="True"
                     Message="Lorem ipsum dolor sit amet"
                     Title="License Agreement">
                <InfoBar.ActionButton>
                    <HyperlinkButton Content="Apache License 2.0"
                                     NavigateUri="https://raw.githubusercontent.com/electrifier/electrifier/main/LICENSE" />
                </InfoBar.ActionButton>
            </InfoBar>
            <!-- TODO: Bind to App Notifications -->
            <TextBlock TextWrapping="Wrap">
                    <Run>Some leading text with a</Run>
                    <Hyperlink NavigateUri="https://github.com/electrifier/electrifier"
                               >
                        https://github.com/electrifier/electrifier
                    </Hyperlink>
                    <Run>in the middle.</Run>
            </TextBlock>
        </StackPanel>
    </Grid>
</Page>
