<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:viewmodels="using:electrifier.ViewModels"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:behaviors="using:electrifier.Behaviors"
      x:Class="electrifier.Views.WebViewPage"
      mc:Ignorable="d"
      d:DataContext="{d:DesignInstance Type=viewmodels:WebViewViewModel}"
      behaviors:NavigationViewHeaderBehavior.HeaderMode="Never">
    <Grid x:Name="ContentAreaGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <MenuBar x:Name="ContentAreaTopMenuBar"
                 Grid.Row="0">
            <MenuBarItem Title="File">
                <MenuFlyoutItem Text="New"
                                IsEnabled="False" />
                <MenuFlyoutItem Text="Open..."
                                IsEnabled="False" />
            </MenuBarItem>
            <MenuBarItem Title="Edit">
                <MenuFlyoutItem Text="Undo"
                                IsEnabled="False" />
                <MenuFlyoutItem Text="Cut"
                                IsEnabled="False" />
                <MenuFlyoutItem Text="Copy"
                                IsEnabled="False" />
                <MenuFlyoutItem Text="Paste"
                                IsEnabled="False" />
            </MenuBarItem>
            <MenuBarItem Title="View">
                <MenuFlyoutItem Text="Zoom In"
                                IsEnabled="False" />
                <MenuFlyoutItem Text="Zoom Out"
                                IsEnabled="False" />
            </MenuBarItem>
            <MenuBarItem Title="Help">
                <MenuFlyoutItem Text="About"
                                IsEnabled="False" />
            </MenuBarItem>
        </MenuBar>
        <Grid Grid.Row="1">
            <StackPanel Orientation="Horizontal">
                <Button x:Uid="BrowserBackButton"
                        Command="{x:Bind ViewModel.BrowserBackCommand, Mode=OneWay}"
                        Margin="{StaticResource XSmallLeftTopRightBottomMargin}"
                        Padding="{StaticResource XXSmallLeftTopRightBottomMargin}">
                    <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}"
                              Glyph="&#xE72B;" />
                </Button>
                <Button x:Uid="BrowserForwardButton"
                        Command="{x:Bind ViewModel.BrowserForwardCommand, Mode=OneWay}"
                        Margin="{StaticResource XSmallLeftTopRightBottomMargin}"
                        Padding="{StaticResource XXSmallLeftTopRightBottomMargin}">
                    <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}"
                              Glyph="&#xE72A;" />
                </Button>
            </StackPanel >
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button x:Uid="ReloadButton"
                        Command="{x:Bind ViewModel.ReloadCommand}"
                        Margin="{StaticResource XSmallLeftTopRightBottomMargin}"
                        Padding="{StaticResource XXSmallLeftTopRightBottomMargin}">
                    <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}"
                              Glyph="&#xE72C;" />
                </Button>
                <!-- Glyph 'OpenInNewWindow' xe8a7 -->
                <Button x:Uid="OpenInBrowserButton"
                        Command="{x:Bind ViewModel.OpenInBrowserCommand}"
                        Margin="{StaticResource XSmallLeftTopRightBottomMargin}"
                        Padding="{StaticResource XXSmallLeftTopRightBottomMargin}">
                    <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}"
                              Glyph="&#xe8a7;" />
                </Button>
            </StackPanel>
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay}">
                <ProgressRing IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}" />
                <TextBlock x:Uid="WebView_Loading" />
            </StackPanel>
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Visibility="{x:Bind ViewModel.HasFailures, Mode=OneWay}">
                <TextBlock x:Uid="WebView_FailedMessage"
                           HorizontalAlignment="Center"
                           TextWrapping="WrapWholeWords" />
                <HyperlinkButton x:Uid="WebView_Reload"
                                 Command="{x:Bind ViewModel.ReloadCommand}"
                                 HorizontalAlignment="Center" />
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1">
            <WebView2 x:Name="WebView"
                      Source="{x:Bind ViewModel.Source, Mode=OneWay}" />
        </Grid>
        <CommandBar x:Name="StatusCommandBar"
                    Grid.Row="2"
                    Background="Transparent"
                    DefaultLabelPosition="Right"
                    HorizontalAlignment="Left">
            <AppBarElementContainer HorizontalAlignment="Left"
                                    HorizontalContentAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    VerticalContentAlignment="Center">
                <AppBarElementContainer>
                    <TextBlock Text="{x:Bind ViewModel.Source}" />
                </AppBarElementContainer>
            </AppBarElementContainer>
            <AppBarSeparator />
            <CommandBar.SecondaryCommands>
                <AppBarButton Icon="Setting"
                              Label="Settings">
                    <AppBarButton.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control"
                                             Key="I" />
                    </AppBarButton.KeyboardAccelerators>
                </AppBarButton>
            </CommandBar.SecondaryCommands>
        </CommandBar>
    </Grid>
</Page>
